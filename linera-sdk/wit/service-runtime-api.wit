package linera:app;

interface service-runtime-api {
    schedule-operation: func(operation: list<u8>);
    try-query-application: func(application: user-application-id, argument: list<u8>) -> list<u8>;
    check-execution-time: func(fuel-consumed: u64);

    record crypto-hash {
        part1: u64,
        part2: u64,
        part3: u64,
        part4: u64,
    }

    record user-application-id {
        inner0: crypto-hash,
    }
}
